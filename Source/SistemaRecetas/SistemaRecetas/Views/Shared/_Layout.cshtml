<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- CSS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/MenuStyle.css">
    <link rel="stylesheet" href="~/css/GeneralStyle.css">

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://kit.fontawesome.com/41bcea2ae3.js" crossorigin="anonymous"></script>

    <title>Gestor de Recetas</title>
</head>
<body id="body">
    <div class="menu__side" id="menu_side">
        <div class="name__page" id="btn_open">
            <img src="~/img/Logo.png" alt="Gestor de Recetas" width="70" height="70" />
        </div>

        <div class="options__menu">
            <a asp-area="" asp-controller="Home" asp-action="Inicio" style="text-decoration:none">
                <div class="option">
                    <i class="fa-solid fa-arrow-right"></i>
                    <h5>Recetas</h5>
                </div>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="NuevaReceta" style="text-decoration:none">
                <div class="option">
                    <i class="fa-solid fa-arrow-right"></i>
                    <h5>Nueva Receta</h5>
                </div>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Usuarios" style="text-decoration:none">
                <div class="option">
                    <i class="fa-solid fa-arrow-right"></i>
                    <h5>Usuarios</h5>
                </div>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="NuevoUsuario" style="text-decoration:none">
                <div class="option">
                    <i class="fa-solid fa-arrow-right"></i>
                    <h5>Nuevo Usuario</h5>
                </div>
            </a>

            <a asp-area="" asp-controller="Home" asp-action="CRUDDepartamentos" style="text-decoration:none">
                <div class="option">
                    <i class="fa-solid fa-arrow-right"></i>
                    <h5>Gestión de Áreas</h5>
                </div>
            </a>

            <a asp-area="" asp-controller="Home" asp-action="CerrarSesion" style="text-decoration:none">
                <div class="option">
                    <i class="fas fa-sign-out-alt" title="Cerrar Sesión"></i>
                    <h5>Cerrar Sesión</h5>
                </div>
            </a>

        </div>
    </div>

    <main id="main">
        <div class="container-fluid">
            <div class="row" style="margin-top:-65px;">
                <div class="col-1" id="btn_open_aux" style="display:inline;">
                    <i class="fa-solid fa-bars" style="color: #5A5A5A;"></i>
                </div>
                <div class="col-11">
                    <h4>
                        @ViewData["Title"]
                    </h4>
                </div>
            </div>
            <hr />
            @RenderBody()
        </div>

        <hr />
        <footer>
            <p>&copy; Gestor de Recetas</p>
        </footer>
    </main>

    <script src="~/js/menu.js"></script>
    <script>
        // Variable que se define en el web config para almacenar la ruta de acceso de la pagina web
        var Ruta = '@ViewBag.Ruta';

       
    </script>
</body>
</html>
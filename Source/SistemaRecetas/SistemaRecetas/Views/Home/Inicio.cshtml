        function cargarRecetas()
        {
            var idDepartamento = document.getElementById("departamentos").value;
            var idSubDepartamento = document.getElementById("subdepartamentos").value;
            console.log(idSubDepartamento);
            $.ajax({
                type: 'POST',
                url: Ruta + "/Home/ObtenerRecetaPorDepartamentoySubDepartamento?idDepartamento=" + idDepartamento + "&idSubDepartamento=" + idSubDepartamento,
                success: function (data) {
                    try {
                        var json = JSON.parse(data);
                        table.clear().draw();

                        for (var i in json)
                        {
                            console.log(json);
                            table.row.add($("<tr>" +
                                "<td hidden>" + json[i].idReceta + "</td>" +
                                "<td>" + json[i].nombre + "</td>" +
                                "<td>" + json[i].descripcion + "</td>" +
                                "<td style='width: 5%'><button class='btn btnPrincipal' onclick='abrirModal(" + json[i].idReceta + ")'><i class='fa-solid fa-eye' title='VerReceta'></i></button></td>" +
                                "<td><a class='btn btnPrincipal' ><i class='fa-solid fa-pen-to-square' title='Editar'></i></a></td>" +
                                "<td><a class='btn btnPrincipal' ><i class='fa-solid fa-delete-left' title='Eliminar'></i></a></td>" +

                                "</tr > ")).draw(false);

                        }
                    }
                    catch (error) {
                        swal.fire({
                            icon: 'error',
                            html: '<h5>Error al cargar las recetas</h5>'
                        });
                    }
                },
                error: function () {
                    swal.fire({
                        icon: 'error',
                        html: '<h5>Error al cargar las recetas</h5>'
                    });
                }
            });
        }
